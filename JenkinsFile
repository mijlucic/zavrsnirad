#!groovy
pipeline {
  agent {
    label "master"
  }
  stages {
    stage("Pokreni") {
      parallel {
        stage('Frontend') {
          agent {
            label "master"
          }
          steps {
            retry(3) {
              echo "On frontend"
              dir("") {
                bat "npm install"
                timeout(time: 1, unit: 'MINUTES')
                {
                    bat "npm start"
                }
                
              }
              echo "Finished frontend"
            }
          }
        }
      }
      post {
        success {
          echo "post success"
        }
        failure {
          echo "Only when we fail running the first stage."
        }
      }
    }
    
  }
  post {
    always {
      deleteDir()
    }
    success {
        echo "post success"
    }
    failure {
        echo "post failure"
    }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr:'20'))
    timeout(time: 60, unit: 'MINUTES')
  }
}
